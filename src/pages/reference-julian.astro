---
import BaseLayout from '../layouts/BaseLayout.astro';

const tourDates = [
  { date: "MAR 12", city: "NEW YORK, NY", venue: "BLUE NOTE" },
  { date: "MAR 14", city: "BOSTON, MA", venue: "CITY WINERY" },
  { date: "MAR 16", city: "PHILADELPHIA, PA", venue: "WORLD CAFE LIVE" },
  { date: "MAR 19", city: "WASHINGTON, DC", venue: "THE HAMILTON" },
  { date: "APR 02", city: "CHICAGO, IL", venue: "THALIA HALL" },
  { date: "APR 04", city: "MINNEAPOLIS, MN", venue: "THE DAKOTA" },
];
---

<BaseLayout title="Julian Lage Reference | Musician Portfolio">
  <div class="font-serif bg-neutral-950 text-neutral-200 min-h-screen">
    
    <!-- Navigation -->
    <nav class="fixed top-0 w-full z-50 flex justify-between items-center px-8 py-6 mix-blend-difference text-white">
      <div class="text-lg tracking-widest uppercase font-bold">Julian Lage Ref</div>
      <div class="hidden md:flex gap-8 text-sm tracking-widest uppercase font-sans opacity-80">
        <a href="#" class="hover:opacity-100 transition-opacity">Tour</a>
        <a href="#" class="hover:opacity-100 transition-opacity">Music</a>
        <a href="#" class="hover:opacity-100 transition-opacity">About</a>
        <a href="#" class="hover:opacity-100 transition-opacity">Store</a>
        <a href="/" class="hover:opacity-100 transition-opacity border-b border-transparent hover:border-white">Back to Home</a>
      </div>
      <button class="md:hidden">MENU</button>
    </nav>

    <!-- Hero Section -->
    <header class="relative h-screen w-full overflow-hidden flex items-center justify-center">
      <div class="absolute inset-0 z-0">
        <img 
          src="https://images.unsplash.com/photo-1514320291840-2e0a9bf2a9ae?q=80&w=2070&auto=format&fit=crop" 
          alt="Musician playing guitar in moody lighting" 
          class="w-full h-full object-cover opacity-60 grayscale contrast-125"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-neutral-950 via-transparent to-transparent opacity-90"></div>
      </div>
      
      <div class="relative z-10 text-center space-y-6 px-4">
        <h1 class="text-6xl md:text-8xl lg:text-9xl tracking-tight font-light text-white drop-shadow-xl">
          Speak to Me
        </h1>
        <p class="text-lg md:text-xl font-sans tracking-[0.2em] uppercase text-neutral-300">
          The New Album &middot; Out Now
        </p>
        <div class="pt-8">
          <a href="#" class="inline-block border border-white/30 px-8 py-3 text-sm font-sans tracking-widest uppercase hover:bg-white hover:text-black transition-all duration-300">
            Listen / Buy
          </a>
        </div>
      </div>
    </header>

    <!-- Tour Section -->
    <section class="py-24 px-6 md:px-12 lg:px-24 max-w-7xl mx-auto">
      <div class="flex flex-col md:flex-row gap-12">
        <div class="md:w-1/3">
          <h2 class="text-4xl md:text-5xl italic font-light mb-6">Live</h2>
          <p class="font-sans text-neutral-400 text-sm leading-relaxed max-w-xs">
            Experience the new trio live across North America this spring. Featuring Dave King and Jorge Roeder.
          </p>
        </div>
        
        <div class="md:w-2/3 w-full">
          <div class="border-t border-neutral-800">
            {tourDates.map((show) => (
              <div class="group flex flex-col md:flex-row md:items-center justify-between py-6 border-b border-neutral-800 hover:border-neutral-500 transition-colors cursor-pointer">
                <div class="flex gap-6 items-baseline">
                  <span class="font-sans text-xs font-bold tracking-widest w-16 text-neutral-500 group-hover:text-white transition-colors">{show.date}</span>
                  <span class="text-xl md:text-2xl font-light group-hover:translate-x-2 transition-transform duration-300">{show.city}</span>
                </div>
                <div class="flex justify-between items-center mt-2 md:mt-0 w-full md:w-auto md:gap-12 pl-22 md:pl-0">
                  <span class="font-sans text-xs tracking-widest text-neutral-500 uppercase">{show.venue}</span>
                  <span class="font-sans text-xs border border-neutral-800 px-4 py-1 rounded-full group-hover:border-neutral-400 transition-colors">TICKETS</span>
                </div>
              </div>
            ))}
          </div>
          <div class="mt-12 text-center md:text-left">
            <a href="#" class="text-sm font-sans underline decoration-neutral-700 underline-offset-4 hover:decoration-white transition-all">
              VIEW ALL DATES
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Album / Quote -->
    <section class="py-24 bg-neutral-900 text-center px-6">
      <div class="max-w-4xl mx-auto space-y-12">
        <blockquote class="text-3xl md:text-5xl font-light leading-tight">
          "Music that feels both intimately personal and wide open to the world."
        </blockquote>
        <cite class="block font-sans text-xs tracking-widest text-neutral-500 not-italic uppercase">
          &mdash; The New York Times
        </cite>
        
        <div class="pt-12">
          <div class="aspect-square max-w-md mx-auto bg-neutral-800 relative group overflow-hidden shadow-2xl">
             <!-- Placeholder for Album Art -->
             <div class="absolute inset-0 flex items-center justify-center text-neutral-600 font-sans tracking-widest border border-neutral-700">
                ALBUM ARTWORK
             </div>
             <!-- Overlay -->
             <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                <span class="border border-white px-6 py-2 text-white font-sans text-xs tracking-widest uppercase">Stream Now</span>
             </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 border-t border-neutral-900 text-center font-sans text-xs tracking-widest text-neutral-600 uppercase">
      <p>&copy; 2024 Reference Artist. All Rights Reserved.</p>
    </footer>

  </div>
</BaseLayout>
