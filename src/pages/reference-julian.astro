---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/julian-theme.css'; // Import the specific theme file

const tourDates = [
  { date: "MAR 12", city: "NEW YORK, NY", venue: "BLUE NOTE" },
  { date: "MAR 14", city: "BOSTON, MA", venue: "CITY WINERY" },
  { date: "MAR 16", city: "PHILADELPHIA, PA", venue: "WORLD CAFE LIVE" },
  { date: "MAR 19", city: "WASHINGTON, DC", venue: "THE HAMILTON" },
  { date: "APR 02", city: "CHICAGO, IL", venue: "THALIA HALL" },
  { date: "APR 04", city: "MINNEAPOLIS, MN", venue: "THE DAKOTA" },
];
---

<BaseLayout title="Julian Lage Reference | Musician Portfolio">
  <!-- Apply the theme class wrapper -->
  <div class="julian-theme min-h-screen selection:bg-black selection:text-white">
    
    <!-- Navigation -->
    <nav class="fixed top-0 w-full z-50 flex justify-between items-center px-8 py-6 mix-blend-exclusion text-white">
      <div class="julian-nav font-bold text-lg">Julian Lage Ref</div>
      <div class="hidden md:flex gap-8 julian-nav opacity-80">
        <a href="#" class="hover:opacity-100 transition-opacity">Tour</a>
        <a href="#" class="hover:opacity-100 transition-opacity">Music</a>
        <a href="#" class="hover:opacity-100 transition-opacity">About</a>
        <a href="#" class="hover:opacity-100 transition-opacity">Store</a>
        <a href="/" class="hover:opacity-100 transition-opacity border-b border-transparent hover:border-current">Back to Home</a>
      </div>
      <button class="md:hidden julian-nav">MENU</button>
    </nav>

    <!-- Hero Section -->
    <header class="relative h-screen w-full overflow-hidden flex items-center justify-center">
      <div class="absolute inset-0 z-0 bg-[#8b5e3c]"> <!-- Lighter, warmer brown base -->
        <img 
          src="https://images.unsplash.com/photo-1504198458649-3128b932f49e?q=80&w=2070&auto=format&fit=crop" 
          alt="Drummer playing with energy and feeling" 
          class="w-full h-full object-cover sepia-[.4] contrast-[1.15] mix-blend-luminosity opacity-90"
        />
        <!-- Warm Amber/Brown Tint Overlay (Soft Light preserves brightness) -->
        <div class="absolute inset-0 bg-[#6d4c41]/30 mix-blend-hard-light"></div>
        <!-- Subtle gradient at bottom for text readability without crushing the whole image -->
        <div class="absolute inset-0 bg-gradient-to-t from-[#3e2723]/80 via-transparent to-transparent"></div>
      </div>
      
      <div class="relative z-10 text-center space-y-8 px-4">
        <h1 class="julian-heading text-6xl md:text-8xl lg:text-9xl text-[#fdfbf7] drop-shadow-xl shadow-black/20">
          Speak to Me
        </h1>
        <p class="julian-nav text-[#ede0d4] text-lg md:text-xl tracking-[0.2em] drop-shadow-md">
          The New Album &middot; Out Now
        </p>
        <div class="pt-8">
          <a href="#" class="inline-block border border-[#ede0d4]/60 px-8 py-3 julian-nav text-[#fdfbf7] hover:bg-[#fdfbf7] hover:text-[#3e2723] transition-all duration-300 shadow-lg shadow-black/10">
            Listen / Buy
          </a>
        </div>
      </div>
    </header>

    <!-- Tour Section (Light Mode bg comes from .julian-theme) -->
    <section class="py-24 px-6 md:px-12 lg:px-24 max-w-7xl mx-auto">
      <div class="flex flex-col md:flex-row gap-12">
        <div class="md:w-1/3">
          <h2 class="julian-heading text-4xl md:text-5xl italic mb-6">Live</h2>
          <p class="font-sans text-xs leading-relaxed max-w-xs text-[var(--color-julian-muted)]">
            Experience the new trio live across North America this spring. Featuring Dave King and Jorge Roeder.
          </p>
        </div>
        
        <div class="md:w-2/3 w-full">
          <div class="border-t border-[var(--color-julian-muted)]/20">
            {tourDates.map((show) => (
              <div class="group flex flex-col md:flex-row md:items-center justify-between py-6 border-b border-[var(--color-julian-muted)]/20 hover:border-black transition-colors cursor-pointer">
                <div class="flex gap-6 items-baseline">
                  <span class="julian-nav font-bold w-16 text-[var(--color-julian-muted)] group-hover:text-black transition-colors">{show.date}</span>
                  <span class="text-xl md:text-2xl font-light julian-heading group-hover:translate-x-2 transition-transform duration-300">{show.city}</span>
                </div>
                <div class="flex justify-between items-center mt-2 md:mt-0 w-full md:w-auto md:gap-12 pl-22 md:pl-0">
                  <span class="julian-nav text-[var(--color-julian-muted)]">{show.venue}</span>
                  <span class="julian-nav text-[10px] border border-[var(--color-julian-muted)]/30 px-4 py-1 rounded-full group-hover:border-black transition-colors">TICKETS</span>
                </div>
              </div>
            ))}
          </div>
          <div class="mt-12 text-center md:text-left">
            <a href="#" class="julian-nav underline decoration-gray-300 underline-offset-4 hover:decoration-black transition-all">
              VIEW ALL DATES
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Album / Quote -->
    <section class="py-24 bg-[#ebe7e0] text-center px-6">
      <div class="max-w-4xl mx-auto space-y-12">
        <blockquote class="julian-heading text-3xl md:text-5xl leading-tight">
          "Music that feels both intimately personal and wide open to the world."
        </blockquote>
        <cite class="block julian-nav text-[var(--color-julian-muted)] not-italic">
          &mdash; The New York Times
        </cite>
        
        <div class="pt-12">
          <div class="aspect-square max-w-md mx-auto bg-[#f2efe9] relative group overflow-hidden shadow-xl">
             <!-- Placeholder for Album Art -->
             <div class="absolute inset-0 flex items-center justify-center text-[#dcd5cc] julian-nav border border-[#dcd5cc]/50">
                ALBUM ARTWORK
             </div>
             <!-- Overlay -->
             <div class="absolute inset-0 bg-[#f2efe9]/90 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                <span class="border border-[#3e2723] px-6 py-2 text-[#3e2723] julian-nav">Stream Now</span>
             </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 border-t border-[#dcd5cc] text-center julian-nav text-[var(--color-julian-muted)]">
      <p>&copy; 2024 Reference Artist. All Rights Reserved.</p>
    </footer>

  </div>
</BaseLayout>
